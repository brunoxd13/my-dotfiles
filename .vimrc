" Enable syntax highlighting
syntax enable

" Use molokai colorscheme
colorscheme molokai

" Insert spaces when using tab
set expandtab

" Number of space characters for a tab
set tabstop=4

" Number of space characters for indentation
set shiftwidth=4

" Copy indent from current line when starting a new line
set autoindent

" Smart autoindenting when starting a new line
set smartindent

" Display line numbers
set number

" Display line numbers relative to the line with the cursor
set relativenumber